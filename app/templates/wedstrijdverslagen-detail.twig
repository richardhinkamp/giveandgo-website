{% extends "layout/news-detail.twig" %}

{% import "layout/news-detail.twig" as news %}

{% block page_content %}
    {{ parent() }}
    {% setcontent entries = "wedstrijdverslagen/latest/5" where { id: "!" ~ record.id } %}
    {% setcontent teams = "teams" where { team_id: record.team_id } %}
    {% for team in teams %}
        <p class="team-info">
            Team: <a href="{{ team.link }}" title="{{ team.title }}">{{ team.title }}</a>
            {% if team.nbb_competitie_id > 0 and team.nbb_team_id > 0 %}
                , <a href="{{ team.link }}#stand" title="Stand van {{ record.title }}">Stand</a>
                , <a href="{{ team.link }}#uitslagen" title="Uitslagen van {{ record.title }}">Uitslagen</a>
            {% endif %}
        </p>
    {% endfor %}
    {{ news.latest_list( "Laatste wedstrijdverslagen", entries ) }}
{% endblock %}

{% block submenu_title %}<a href="/wedstrijdverslagen" title="Wedstrijdverslagen">Wedstrijdverslagen</a>{% endblock %}

{% block submenu_list %}
    {% setcontent entries = "wedstrijdverslagen/latest/10" %}
    {% for entry in entries %}
        <li class="Menu">
            <a href="{{ entry.link }}" title="{{ entry.title }}">{{ entry.date|date("d-m")}} {{ entry.team_id }}: {{ entry.title }}</a>
        </li>
    {% endfor %}
{% endblock %}
