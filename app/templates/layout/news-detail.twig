{% extends "layout/layout.twig" %}

{% block page_content %}

    <article class="blog">
        <h1><a href="{{ record.link }}">{{ record.title }}</a></h1>
        <p class="meta">Geplaatst op {{ record.date|date("d-m-Y")}}</p>
        <div class="blog-body">{{ record.body }}</div>
    </article>

