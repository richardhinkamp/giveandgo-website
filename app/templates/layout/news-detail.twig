{% endblock %}

{% macro latest_list(name, entries) %}
    <h2>{{ name }}</h2>
    <ul class="latest-blogs">
        {% for entry in entries %}
            <li><a href="{{ entry.link }}"><span class="blog-date">{{ entry.date|date("d-m-Y")}}</span> {{ entry.title }}</a></li>
        {% endfor %}
    </ul>
{% endmacro %}