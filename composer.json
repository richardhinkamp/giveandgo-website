{
    "name": "richardhinkamp/giveandgo-website",
    "description": "Give & Go website",

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/richardhinkamp/kcfinder"
		},
		{
			"type": "vcs",
			"url": "https://github.com/richardhinkamp/bolt"
        },
        {
            "type": "vcs",
            "url": "https://github.com/richardhinkamp/bolt-picasa"
        }
    ],

    "autoload": {
        "psr-0": {"Giveandgo": "./app/src/"}
    },


    "require": {
        "bolt/bolt": "dev-release/1.6",
        "bolt/thumbs": "1.7.*@dev",
        "hautelook/phpass": "dev-master",
        "ircmaxell/random-lib": "dev-master",
        "filp/whoops": "dev-master",

        "richardhinkamp/bolt-picasa": "dev-master",
        "richardhinkamp/kcfinder": "dev-master",
		"jlong/sass-twitter-bootstrap": "2.3.*",
        "symfony/css-selector": "~2.4",
        "symfony/dom-crawler": "~2.4"
    },
    "require-dev": {
    },
    "minimum-stability": "stable",
    "scripts": {
        "post-install-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets",
            "KCFinder\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Bolt\\Composer\\ScriptHandler::installAssets",
            "KCFinder\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "extra": {
        "bolt-web-dir": "web",
        "bolt-dir-mode": "0755",
        "kcfinder-web-dir": "web",
        "kcfinder-assets-install": "relative",
        "kcfinder-dir-mode": "0755"
    }
}
